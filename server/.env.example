# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# Mode de développement local (true = base locale, false = Google Cloud)
# Mettez à "false" et configurez Google Cloud pour utiliser Firestore
USE_LOCAL_DB=true

# Google Cloud Configuration (obligatoire si USE_LOCAL_DB=false)
GCLOUD_PROJECT_ID=your-gcloud-project-id
GCLOUD_STORAGE_BUCKET=your-storage-bucket-name

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your@email.com
EMAIL_PASSWORD=your_app_password
